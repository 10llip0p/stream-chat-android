<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="streamUiReactionsBubbleColorMine" format="color|reference" />
    <attr name="streamUiReactionsBubbleColorTheirs" format="color|reference" />

    <declare-styleable name="AvatarView">
        <attr name="streamUiAvatarBorderColor" format="color|reference" />
        <attr name="streamUiAvatarBorderWidth" format="dimension|reference" />
        <attr name="streamUiAvatarTextSize" format="dimension|reference" />
        <attr name="streamUiAvatarTextColor" format="color|reference" />
        <attr name="streamUiAvatarTextFont" format="reference" />
        <attr name="streamUiAvatarTextFontAssets" format="string" />
        <attr name="streamUiAvatarTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="streamUiAvatarOnlineIndicatorEnabled" format="boolean" />
        <attr name="streamUiAvatarOnlineIndicatorPosition" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
    </declare-styleable>

    <!--MessageInputViewNew-->
    <declare-styleable name="MessageInputView">
        <!--Attachment Button-->
        <attr name="streamUiAttachButtonEnabled" format="boolean" />
        <attr name="streamUiAttachButtonIcon" format="reference" />
        <attr name="streamUiAttachButtonIconColor" format="color|reference" />
        <attr name="streamUiAttachButtonIconPressedColor" format="color|reference" />
        <attr name="streamUiAttachButtonIconDisabledColor" format="color|reference" />
        <attr name="streamUiAttachButtonSelectedIconColor" format="color|reference" />

        <!--Lightning Button-->
        <attr name="streamUiLightningButtonEnabled" format="boolean" />
        <attr name="streamUiLightningButtonIcon" format="reference" />
        <attr name="streamUiLightningButtonIconColor" format="color|reference" />
        <attr name="streamUiLightningButtonIconPressedColor" format="color|reference" />
        <attr name="streamUiLightningButtonIconDisabledColor" format="color|reference" />

        <!--Input Text-->
        <attr name="streamUiMessageInputTextSize" format="dimension|reference" />
        <attr name="streamUiMessageInputTextColor" format="color|reference" />
        <attr name="streamUiMessageInputHintTextColor" format="color|reference" />
        <attr name="streamUiMessageInputScrollbarEnabled" format="boolean" />
        <attr name="streamUiMessageInputScrollbarFadingEnabled" format="boolean" />

        <!--Send Button-->
        <attr name="streamUiSendButtonEnabledIconColor" format="color|reference" />
        <attr name="streamUiSendButtonDisabledIconColor" format="color|reference" />
        <attr name="streamUiSendButtonPressedIconColor" format="color|reference" />
        <attr name="streamUiSendButtonEnabledIcon" format="reference" />
        <attr name="streamUiSendButtonDisabledIcon" format="reference" />
        <attr name="streamUiSendButtonEnabled" format="boolean" />

        <!-- "Also send to channel" CheckBox -->
        <attr name="streamUiShowSendAlsoToChannelCheckbox" format="boolean" />
    </declare-styleable>

    <!--ChannelsHeaderView-->
    <declare-styleable name="ChannelListHeaderView">
        <attr name="streamUiShowUserAvatar" format="boolean" />

        <attr name="streamUiOnlineTitleTextSize" format="dimension|reference" />
        <attr name="streamUiOnlineTitleTextColor" format="color|reference" />
        <attr name="streamUiOnlineTitleTextFont" format="reference" />
        <attr name="streamUiOnlineTitleFontAssets" format="string" />
        <attr name="streamUiOnlineTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamUiOfflineTitleTextSize" format="dimension|reference" />
        <attr name="streamUiOfflineTitleTextColor" format="color|reference" />
        <attr name="streamUiOfflineTitleTextFont" format="reference" />
        <attr name="streamUiOfflineTitleFontAssets" format="string" />
        <attr name="streamUiOfflineTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamUiShowOfflineProgressBar" format="boolean" />
        <attr name="streamUiOfflineProgressBarTint" format="color|reference" />

        <attr name="streamUiShowAddChannelButton" format="boolean" />
        <attr name="streamUiAddChannelButtonIcon" format="reference" />
        <attr name="streamUiAddChannelButtonTint" format="color|reference" />
        <attr name="streamUiAddChannelBackgroundTint" format="color|reference" />
    </declare-styleable>

    <!--ChannelListView-->
    <declare-styleable name="ChannelListView">
        <attr name="streamUiChannelTitleTextSize" format="dimension|reference" />
        <attr name="streamUiLastMessageDateTextSize" format="dimension|reference" />
        <attr name="streamUiLastMessageTextSize" format="dimension|reference" />
    </declare-styleable>

    <!--MessageListHeaderView-->
    <declare-styleable name="MessagesHeaderView" parent="AvatarView">
        <attr name="streamUiMessagesHeaderShowUserAvatar" format="boolean" />

        <attr name="streamUiMessagesHeaderTitleTextSize" format="dimension|reference" />
        <attr name="streamUiMessagesHeaderTitleTextColor" format="color|reference" />
        <attr name="streamUiMessagesHeaderTitleTextFont" format="reference" />
        <attr name="streamUiMessagesHeaderTitleFontAssets" format="string" />
        <attr name="streamUiMessagesHeaderTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamUiMessagesHeaderOfflineLabelTextSize" format="dimension|reference" />
        <attr name="streamUiMessagesHeaderOfflineLabelTextColor" format="color|reference" />
        <attr name="streamUiMessagesHeaderOfflineLabelTextFont" format="reference" />
        <attr name="streamUiMessagesHeaderOfflineLabelFontAssets" format="string" />
        <attr name="streamUiMessagesHeaderOfflineLabelTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamUiMessagesHeaderSearchingForNetworkLabelTextSize" format="dimension|reference" />
        <attr name="streamUiMessagesHeaderSearchingForNetworkLabelColor" format="color|reference" />
        <attr name="streamUiMessagesHeaderSearchingForNetworkLabelTextFont" format="reference" />
        <attr name="streamUiMessagesHeaderSearchingForNetworkLabelFontAssets" format="string" />
        <attr name="streamUiMessagesHeaderSearchingForNetworkLabelTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="streamUiMessagesHeaderShowSearchingForNetworkProgressBar" format="boolean" />
        <attr name="streamUiMessagesHeaderSearchingForNetworkProgressBarTint" format="color|reference" />

        <attr name="streamUiMessagesHeaderShowBackButton" format="boolean" />
        <attr name="streamUiMessagesHeaderShowBackButtonBadge" format="boolean" />
        <attr name="streamUiMessagesHeaderBackButtonBadgeBackgroundColor" format="color" />

        <attr name="streamUiMessagesHeaderDefaultLabelTextSize" format="dimension|reference" />
        <attr name="streamUiMessagesHeaderDefaultLabelTextColor" format="color|reference" />
        <attr name="streamUiMessagesHeaderDefaultLabelTextFont" format="reference" />
        <attr name="streamUiMessagesHeaderDefaultLabelFontAssets" format="string" />
        <attr name="streamUiMessagesHeaderDefaultLabelTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EditReactionsView">
        <attr name="streamUiReactionsBubbleColorMine" />
        <attr name="streamUiReactionsBubbleColorTheirs" />
    </declare-styleable>

    <declare-styleable name="ViewReactionsView">
        <attr name="streamUiReactionsBubbleColorMine" />
        <attr name="streamUiReactionsBubbleColorTheirs" />
        <attr name="streamUiReactionsBubbleBorderColorMine" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="AttachmentGallery">
        <attr name="streamUiCountTextColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="AttachmentOptionsView">
        <attr name="streamUiIconsDefaultTint" format="color" />
        <attr name="streamUiReplyIcon" format="reference" />
        <attr name="streamUiShowInChatIcon" format="reference" />
        <attr name="streamUiSaveImageIcon" format="reference" />
        <attr name="streamUiDeleteIcon" format="reference" />
        <attr name="streamUiDeleteIconTint" format="reference" />
        <attr name="streamUiDeleteTextTint" format="reference" />
    </declare-styleable>

    <declare-styleable name="MessageListView">
        <!-- Scroll button-->
        <attr name="streamUiScrollButtonEnabled" format="boolean" />
        <attr name="streamUiScrollButtonUnreadEnabled" format="boolean" />
        <attr name="streamUiScrollButtonColor" format="color|reference" />
        <attr name="streamUiScrollButtonRippleColor" format="color|reference" />
        <attr name="streamUiScrollButtonBadgeColor" format="color|reference" />
        <attr name="streamUiScrollButtonIcon" format="reference" />

        <attr name="streamUiLoadMoreThreshold" format="integer" />
        <attr name="streamUiNewMessagesBehaviour" format="enum">
            <enum name="scroll_to_bottom" value="0" />
            <enum name="count_new_messages" value="1" />
        </attr>

        <attr name="streamUiReplyOptionIcon" format="reference" />
        <attr name="streamUiThreadReplyOptionIcon" format="reference" />
        <attr name="streamUiRetryOptionIcon" format="reference" />
        <attr name="streamUiCopyOptionIcon" format="reference" />
        <attr name="streamUiEditOptionIcon" format="reference" />
        <attr name="streamUiFlagOptionIcon" format="reference" />
        <attr name="streamUiMuteOptionIcon" format="reference" />
        <attr name="streamUiBlockOptionIcon" format="reference" />
        <attr name="streamUiDeleteOptionIcon" format="reference" />
        <attr name="streamUiMessageOptionIconColor" format="color" />
        <attr name="streamUiCopyMessageActionEnabled" format="color" />
        <attr name="streamUiDeleteConfirmationEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ChannelsView">
        <attr name="streamUiChannelsItemSeparatorDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="MessageReplyView">
        <attr name="streamUiEllipsize" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MediaAttachmentGridView">
        <attr name="streamUiShowUserAvatars" format="boolean" />
    </declare-styleable>
</resources>

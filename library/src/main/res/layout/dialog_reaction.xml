<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rv_reaction"
        android:layout_alignTop="@+id/rv_reaction"
        android:layout_alignRight="@+id/rv_reaction"
        android:layout_alignBottom="@+id/rv_reaction"
        android:layout_marginTop="10dp"
        android:background="@drawable/stream_round_dialog_reaction" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_reaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        tools:listitem="@layout/list_item_dialog_reaction" />
</RelativeLayout>
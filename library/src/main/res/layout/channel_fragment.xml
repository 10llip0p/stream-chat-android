<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stream="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.getstream.sdk.chat.viewmodel.ChannelViewModelOld" />

        <variable
            name="showMainProgressbar"
            type="boolean" />

        <variable
            name="showLoadMoreProgressbar"
            type="boolean" />

        <variable
            name="noConnection"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chat_theme"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".view.activity.ChatActivity">

        <com.getstream.sdk.chat.view.ChannelHeaderView
            android:id="@+id/cht_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2F3036"
            app:layout_constraintEnd_toStartOf="@+id/mlv_messageList"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.getstream.sdk.chat.view.MessageListView
            android:id="@+id/mlv_messageList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="#F3F5F8"
            app:layout_constraintBottom_toTopOf="@+id/message_input"
            app:layout_constraintEnd_toStartOf="@+id/message_input"
            app:layout_constraintStart_toEndOf="@+id/cht_header"
            app:layout_constraintTop_toBottomOf="@+id/cht_header"
            stream:messageBubbleDrawableMine="@drawable/message_bubble_mine"
            stream:messageBubbleDrawableTheirs="@drawable/message_bubble_theirs"
            stream:messageTextColorMine="#FFFFFF"
            stream:messageTextColorTheirs="#1BB76E"
            tools:listitem="@layout/list_item_message" />

        <include
            android:id="@+id/cl_thread"
            layout="@layout/view_thread"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/message_input"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            style="@style/text_s"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_chat_no_connection"
            android:gravity="center"
            android:text="@string/no_connection"
            android:textColor="@color/red"
            android:visibility="visible"
            app:isGone="@{!noConnection}"
            app:layout_constraintBottom_toTopOf="@+id/message_input"
            app:layout_constraintEnd_toEndOf="@+id/message_input"
            app:layout_constraintStart_toStartOf="@+id/message_input" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isGone="@{!showMainProgressbar}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:isGone="@{!showLoadMoreProgressbar}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header" />

        <com.getstream.sdk.chat.view.MessageInputView
            android:id="@+id/message_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="0dp"
            android:background="@color/chat_theme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/mlv_messageList"
            stream:inputHint="what a fun day" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

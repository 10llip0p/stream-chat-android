<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--CircularImageView-->
    <declare-styleable name="Stream_CircularImageView">
        <attr name="stream_ci_borderColor" format="color" />
        <attr name="stream_ci_borderWidth" format="dimension" />
        <attr name="stream_ci_placeholderBackgroundColor" format="color" />
        <attr name="stream_ci_placeholderText" format="string" />
        <attr name="stream_ci_placeholderTextColor" format="color" />
        <attr name="stream_ci_placeholderTextSize" format="dimension" />
        <attr name="stream_ci_checked" format="boolean" />
        <attr name="stream_ci_checkedStateBackgroundColor" format="color" />
        <attr name="stream_ci_shadowRadius" format="float" />
        <attr name="stream_ci_shadowColor" format="color" />
    </declare-styleable>
    <!--ShaderImageView-->
    <declare-styleable name="Stream_ShaderImageView">
        <attr name="stream_siSquare" format="boolean" />
        <attr name="stream_siShape" format="integer|reference" />
    </declare-styleable>
    <!--exomedia-->
    <declare-styleable name="Stream_VideoView">
        <attr name="useDefaultControls" format="boolean" />
        <attr name="useTextureViewBacking" format="boolean" />
        <attr name="videoViewApiImpl" format="reference" />
        <attr name="videoViewApiImplLegacy" format="reference" />
        <attr name="measureBasedOnAspectRatio" format="boolean" />
        <attr name="videoScale" format="enum">
            <enum name="center" value="0" />
            <enum name="centerCrop" value="1" />
            <enum name="centerInside" value="2" />
            <enum name="fitCenter" value="3" />
            <enum name="fitXY" value="4" />
            <enum name="none" value="5" />
        </attr>
    </declare-styleable>
</resources>
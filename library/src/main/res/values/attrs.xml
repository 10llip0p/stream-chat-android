<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ChannelListView-->
    <declare-styleable name="ChannelListView">
        <!--AvatarGroupView-->
        <attr name="channelAvatarWidth" format="dimension|reference" />

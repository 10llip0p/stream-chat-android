        <!--Title-->
        <attr name="titleTextColor" format="color|reference" />
        <attr name="titleTextSize" format="dimension|reference" />
        <attr name="titleTextStyleChannel">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="unreadTitleTextColor" format="color|reference" />
        <attr name="unreadTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="messageTextColor" format="color|reference" />

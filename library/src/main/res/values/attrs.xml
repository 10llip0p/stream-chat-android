<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ChannelListView">
        <attr name="avatarWidth" format="dimension|reference" />
        <attr name="avatarHeight" format="dimension|reference" />
        <attr name="initialsTextSize" format="dimension|reference" />
        <attr name="initialsTextColor" format="color|reference" />
        <attr name="initialsTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="dateTextColor" format="color|reference"/>
        <attr name="dateTextSize" format="dimension|reference"/>

        <attr name="titleTextColor" format="color|reference"/>
        <attr name="titleTextSize" format="dimension|reference"/>
        <attr name="titleTextStyleChannel">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="unreadTitleTextColor" format="color|reference"/>
        <attr name="unreadTitleTextStyle">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="messageTextColor" format="color|reference"/>
        <attr name="messageTextSize" format="dimension|reference"/>
        <attr name="messageTextStyle">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="unreadMessageTextColor" format="color|reference"/>
        <attr name="unreadMessageTextStyle">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="channelPreviewLayout" format="reference" />
    </declare-styleable>
    <declare-styleable name="MessageInputView">
        <attr name="inputHint" format="string"/>
    </declare-styleable>
    <declare-styleable name="MessageListView">
        <attr name="messageTextColorMine" format="color"/>
        <attr name="messageTextColorTheirs" format="color"/>
        <attr name="messageBubbleDrawableMine" format="reference"/>
        <attr name="messageBubbleDrawableTheirs" format="reference"/>
    </declare-styleable>
    <declare-styleable name="ShaderImageView">
        <attr name="siSquare" format="boolean" />
        <attr name="siBorderColor" format="color" />
        <attr name="siBorderWidth" format="dimension" />
        <attr name="siBorderAlpha" format="float" />
        <attr name="siForeground" format="integer|reference" />
        <!-- Rounded Image View -->
        <attr name="siRadius" format="dimension" />
        <!--BubbleImageView-->
        <attr name="siArrowPosition" />
        <attr name="siTriangleHeight" format="dimension" />
        <!--PorterImageView-->
        <attr name="siShape" format="integer|reference" />
        <!--ShaderImageView-->
        <attr name="siBorderType" />
        <attr name="siStrokeCap" />
        <attr name="siStrokeJoin" />
        <attr name="siStrokeMiter" format="dimension" />
    </declare-styleable>
    <!--exomedia-->
    <declare-styleable name="VideoView">
        <attr name="useDefaultControls" format="boolean"/>
        <attr name="useTextureViewBacking" format="boolean"/>
        <attr name="videoViewApiImpl" format="reference"/>
        <attr name="videoViewApiImplLegacy" format="reference"/>
        <attr name="measureBasedOnAspectRatio" format="boolean"/>
        <attr name="videoScale" format="enum">
            <enum name="center" value="0"/>
            <enum name="centerCrop" value="1"/>
            <enum name="centerInside" value="2"/>
            <enum name="fitCenter" value="3"/>
            <enum name="fitXY" value="4"/>
            <enum name="none" value="5"/>
        </attr>
    </declare-styleable>
</resources>
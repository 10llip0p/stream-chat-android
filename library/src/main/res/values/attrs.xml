<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ChannelListView-->
    <declare-styleable name="ChannelListView">
        <!--AvatarGroupView-->

        <attr name="channelAvatarWidth" format="dimension|reference" />
        <attr name="channelAvatarHeight" format="dimension|reference" />
        <attr name="channelAvatarBorderWidth" format="dimension|reference" />
        <attr name="channelAvatarBorderColor" format="color|reference" />
        <attr name="channelAvatarBackGroundColor" format="color|reference" />
        <attr name="channelAvatarTextSize" format="dimension|reference" />
        <attr name="channelAvatarTextColor" format="color|reference" />
        <attr name="channelAvatarTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!--LastMessageDate-->
        <attr name="dateTextColor" format="color|reference" />
        <attr name="dateTextSize" format="dimension|reference" />
        <!--Title-->
        <attr name="titleTextColor" format="color|reference" />
        <attr name="titleTextSize" format="dimension|reference" />
        <attr name="titleTextStyleChannel">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="unreadTitleTextColor" format="color|reference" />
        <attr name="unreadTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="messageTextColor" format="color|reference" />
        <attr name="messageTextSize" format="dimension|reference" />
        <attr name="messageTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="unreadMessageTextColor" format="color|reference" />
        <attr name="unreadMessageTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="channelPreviewLayout" format="reference" />
    </declare-styleable>
    <!--MessageInputView-->
    <declare-styleable name="MessageInputView">
        <attr name="inputHint" format="string" />
    </declare-styleable>
    <!--MessageListView-->
    <declare-styleable name="MessageListView">
        <!--AvatarGroupView-->
        <attr name="userAvatarWidth" format="dimension|reference" />
        <attr name="userAvatarHeight" format="dimension|reference" />
        <attr name="userAvatarBorderWidth" format="dimension|reference" />
        <attr name="userAvatarBorderColor" format="color|reference" />
        <attr name="userAvatarBackGroundColor" format="color|reference" />
        <attr name="userAvatarTextSize" format="dimension|reference" />
        <attr name="userAvatarTextColor" format="color|reference" />
        <attr name="userAvatarTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="messageTextColorMine" format="color" />
        <attr name="messageTextColorTheirs" format="color" />
        <attr name="messageBubbleDrawableMine" format="reference" />
        <attr name="messageBubbleDrawableTheirs" format="reference" />
    </declare-styleable>
    <!--ChannelHeaderView-->
    <declare-styleable name="ChannelHeaderView">
        <!--AvatarGroupView-->
        <attr name="channelHeaderAvatarWidth" format="dimension|reference" />
        <attr name="channelHeaderAvatarHeight" format="dimension|reference" />
        <attr name="channelHeaderAvatarBorderWidth" format="dimension|reference" />
        <attr name="channelHeaderAvatarBorderColor" format="color|reference" />
        <attr name="channelHeaderAvatarBackGroundColor" format="color|reference" />
        <attr name="channelHeaderAvatarTextSize" format="dimension|reference" />
        <attr name="channelHeaderAvatarTextColor" format="color|reference" />
        <attr name="channelHeaderAvatarTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <attr name="channelTitleTextSize" format="dimension|reference" />
        <attr name="channelTitleTextColor" format="color|reference" />
        <attr name="channelTitleTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="backButtonShow" format="boolean" />
    </declare-styleable>
</resources>